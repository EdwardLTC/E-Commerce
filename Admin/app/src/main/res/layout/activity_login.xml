<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_small" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:fontFamily="@font/gordita_medium"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv5" />

    <EditText
        android:id="@+id/edtEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:fontFamily="@font/gordita_regular"
        android:textSize="14sp"
        android:hint="Email"
        android:text="admin@gmail.com"
        android:elevation="2dp"
        android:textColor="@color/black"
        android:paddingLeft="66dp"
        android:background="@drawable/background_edt_log_in"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv6"
        />

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtEmailLogin"
        app:layout_constraintStart_toStartOf="@+id/edtEmailLogin"
        app:layout_constraintTop_toTopOf="@+id/edtEmailLogin"
        android:background="@drawable/background_icon_log_in"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mail_orange" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:fontFamily="@font/gordita_regular"
        android:textSize="14sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:text="123"
        android:textColor="@color/black"
        android:paddingLeft="66dp"
        android:elevation="2dp"
        android:background="@drawable/background_edt_log_in"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailLogin"
        />

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:elevation="2dp"
        android:background="@drawable/background_icon_log_in"
        app:layout_constraintBottom_toBottomOf="@+id/edtPassword"
        app:layout_constraintStart_toStartOf="@+id/edtPassword"
        app:layout_constraintTop_toTopOf="@+id/edtPassword">

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_lock_orange" />


    </LinearLayout>

