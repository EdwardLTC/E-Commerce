<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
       <!-- Status bar color. -->
        <item name="android:statusBarColor">#FBFBFD</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="CustomTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gordita_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <!--  Custom TabLayout  -->
    <style name="CustomTabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#B3000000</item>
        <item name="fontFamily">@font/gordita_medium</item>
    </style>

    <style name="action_button_bs">
        <item name="android:textColor">#3B73CC</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>