<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@color/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="Explore"
                android:textSize="35dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="20dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:hint="best Outfits for you"
                android:textSize="20dp"
                android:paddingLeft="20dp">
            </TextView>

<!--            search-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/style_white"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/ImgFind"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp">
                </ImageView>

                <EditText
                    android:id="@+id/txtFind"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Search Items"
                    android:background="@color/white"
                    android:textSize="15dp">
                </EditText>

                <ImageView
                    android:id="@+id/btnfilter"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_filter"
                    android:background="@drawable/style_orange">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="23dp">
                </TextView>
                <TextView
                    android:id="@+id/SeeAllCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="See all"
                    android:layout_marginLeft="80dp"
                    android:textSize="23dp">
                </TextView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewCategory"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

            </androidx.recyclerview.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="New Arrival"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="23dp">
                </TextView>
                <TextView
                    android:id="@+id/SeeAllNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="See all"
                    android:layout_marginLeft="80dp"
                    android:textSize="23dp">
                </TextView>
            </LinearLayout>

<!--            products-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerViewNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>



</LinearLayout>