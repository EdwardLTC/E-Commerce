<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">
<ImageView
android:id="@+id/iv10"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="32dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:srcCompat="@drawable/ic_logo_small" />

<TextView
android:id="@+id/tv11"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sign Up"
android:fontFamily="@font/gordita_medium"
android:layout_marginTop="32dp"
android:textSize="22sp"
android:textColor="@color/black"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/iv10" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:fontFamily="@font/gordita_regular"
        android:textSize="14sp"
        android:hint="Name"
        android:textColor="@color/black"
        android:paddingLeft="66dp"
        android:background="@drawable/background_edt_log_in"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv11"
        />

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/background_icon_log_in"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/edtName"
        app:layout_constraintStart_toStartOf="@+id/edtName"
        app:layout_constraintTop_toTopOf="@+id/edtName"
    >

    <ImageView
        android:id="@+id/iv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_profile_selected" />
    </LinearLayout>


    <EditText
        android:id="@+id/edtEmailSignup"
        android:layout_width="366dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_edt_log_in"
        android:fontFamily="@font/gordita_regular"
        android:hint="Email"
        android:paddingLeft="66dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtName" />

    <LinearLayout
android:layout_width="48dp"
android:layout_height="45dp"
android:gravity="center"
android:orientation="vertical"
app:layout_constraintBottom_toBottomOf="@+id/edtEmailSignup"
app:layout_constraintStart_toStartOf="@+id/edtEmailSignup"
app:layout_constraintTop_toTopOf="@+id/edtEmailSignup"
android:background="@drawable/background_icon_log_in"
android:layout_marginLeft="8dp">

<ImageView
    android:id="@+id/iv11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_mail_orange" />


</LinearLayout>

<EditText
android:id="@+id/edtPassword"
android:layout_width="match_parent"
android:layout_height="57dp"
android:fontFamily="@font/gordita_regular"
android:textSize="14sp"
android:hint="Password"
android:textColor="@color/black"
android:paddingLeft="66dp"
android:background="@drawable/background_edt_log_in"
android:layout_marginLeft="24dp"
android:layout_marginRight="24dp"
android:layout_marginTop="16dp"
app:layout_constraintTop_toBottomOf="@+id/edtEmailSignup"
    />


    <LinearLayout
android:layout_width="48dp"
android:layout_height="45dp"
android:gravity="center"
android:orientation="vertical"
android:layout_marginLeft="8dp"
android:background="@drawable/background_icon_log_in"
app:layout_constraintBottom_toBottomOf="@+id/edtPassword"
app:layout_constraintStart_toStartOf="@+id/edtPassword"
app:layout_constraintTop_toTopOf="@+id/edtPassword">

<ImageView
    android:id="@+id/iv7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_lock_orange" />


</LinearLayout>

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button_login"
        android:fontFamily="@font/gordita_medium"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
android:id="@+id/tv7"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Or"
android:textColor="@color/black"
android:layout_marginTop="24dp"
android:fontFamily="@font/gordita_regular"
android:textSize="12sp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/btSignUp" />

<androidx.constraintlayout.widget.ConstraintLayout
android:id="@+id/constraintLayout"
android:layout_width="100dp"
android:layout_height="0.5dp"
android:layout_marginRight="12dp"
android:background="@color/black"
app:layout_constraintBottom_toBottomOf="@+id/tv7"
app:layout_constraintEnd_toStartOf="@+id/tv7"
app:layout_constraintTop_toTopOf="@+id/tv7" />

<androidx.constraintlayout.widget.ConstraintLayout
android:id="@+id/constraintLayout2"
android:layout_width="100dp"
android:layout_height="0.5dp"
android:layout_marginLeft="12dp"
android:background="@color/black"
app:layout_constraintBottom_toBottomOf="@+id/tv7"
app:layout_constraintStart_toEndOf="@+id/tv7"
app:layout_constraintTop_toTopOf="@+id/tv7" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLoginGoogle"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/tv7">

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_facebook" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLoginFacebook"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/tv7">

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_google" />
    </androidx.cardview.widget.CardView>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:text="I accept all the Terms &amp; Conditions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>