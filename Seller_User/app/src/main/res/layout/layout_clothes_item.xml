<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#F9F6F6"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvClothesItem"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E3E3E1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/ivClothesItem"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/shirt" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNameClothesItem"
            android:textSize="14sp"
            android:fontFamily="@font/gordita_medium"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long Sleeve Shirts"
            app:layout_constraintStart_toEndOf="@+id/cvClothesItem"
            app:layout_constraintTop_toTopOf="@+id/cvClothesItem" />

        <TextView
            android:id="@+id/tvTypeClothesItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Shirt"
            android:textSize="14sp"
            android:fontFamily="@font/gordita_regular"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/cvClothesItem"
            app:layout_constraintTop_toBottomOf="@+id/tvNameClothesItem" />

        <TextView
            android:id="@+id/tvQuantityClothesItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 5"
            android:textSize="14sp"
            android:fontFamily="@font/gordita_regular"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/cvClothesItem"
            app:layout_constraintTop_toBottomOf="@+id/tvTypeClothesItem" />

        <TextView
            android:id="@+id/tVMoreDetailsClothesItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gordita_regular"
            android:text="More details"
            android:layout_marginRight="16dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/cvClothesItem"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivDeleteClothesItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_close" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>